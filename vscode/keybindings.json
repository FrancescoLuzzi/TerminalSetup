[
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "!terminalFocus && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight",
    "when": "!terminalFocus && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+k",
    "when": "vim.mode != 'Insert'",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "when": "vim.mode != 'Insert'",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+h",
    "when": "terminalFocus",
    "command": "workbench.action.terminal.focusPreviousPane"
  },
  {
    "key": "ctrl+l",
    "when": "terminalFocus",
    "command": "workbench.action.terminal.focusNextPane"
  },
  {
    "key": "ctrl+\\",
    "when": "terminalFocus",
    "command": "workbench.action.terminal.split"
  },
  {
    "key": "ctrl+alt+w",
    "command": "toggleVim"
  },
  {
    "key": "ctrl+t",
    "command": "workbench.action.togglePanel"
  },
  // resize current view
  {
    "key": "alt+left",
    "command": "workbench.action.decreaseViewSize",
    "when": "!isAuxiliaryWindowFocusedContext"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.increaseViewWidth",
    "when": "!isAuxiliaryWindowFocusedContext"
  },
  // navigate completions
  {
    "key": "ctrl+n",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorTextFocus && !codeActionMenuVisible && vim.active && vim.use<C-n> && !inDebugRepl && ( vim.mode == 'Normal' || vim.mode == 'Visual')"
  },
  {
    "key": "ctrl+n",
    "command": "extension.vim_ctrl+n",
    "when": "editorTextFocus && !codeActionMenuVisible && vim.active && vim.use<C-n> && !inDebugRepl && vim.mode == 'Insert'"
  },
  // navigate quickfix
  {
    "key": "ctrl+n",
    "command": "selectNextCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "ctrl+p",
    "command": "selectPrevCodeAction",
    "when": "codeActionMenuVisible"
  },
  // navigate files and editor selection
  {
    "key": "ctrl+n",
    "command": "workbench.action.quickOpenNavigateNext",
    "when": "inCommandsPicker || inFilesPicker || inEditorsPicker"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    "when": "!codeActionMenuVisible && vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenNavigatePrevious",
    "when": "inCommandsPicker || inFilesPicker || inEditorsPicker"
  },
  // file manipulation
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  }
]
