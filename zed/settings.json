// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "format_on_save": "on",
  "languages": {
    "JavaScript": {
      "prettier": {
        "allowed": false
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "prettier": {
        "allowed": false
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Vue.js": {
      "prettier": {
        "allowed": false
      },
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Python": {
      "formatter": "language_server",
      "language_servers": ["ruff"],
      "code_actions_on_format": {
        "source.organizeImports.ruff": true,
        "source.fixAll.ruff": true
      }
    },
    "Rust": {
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true,
        "source.fix.clippy": true
      }
    },
    "Go": {
      "formatter": "language_server",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Go Mod": {
      "formatter": {
        "external": {
          "command": "go",
          "arguments": ["mod", "edit", "-fmt", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "Go Work": {
      "formatter": {
        "external": {
          "command": "go",
          "arguments": ["work", "edit", "-fmt", "{buffer_path}"]
        }
      },
      "format_on_save": "on"
    },
    "JSON": {
      "code_actions_on_format": {
        "source.fixAll": true
      },
      "format_on_save": "on"
    }
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "base_keymap": "VSCode",
  "minimap": {
    "show": "auto"
  },
  "buffer_font_family": "Cascadia Code NF",
  "terminal": {
    "font_size": 13.0,
    "blinking": "on",
    "line_height": "standard"
  },
  "file_types": {},
  "ui_font_size": 16,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  }
}
